<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"

    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutCanvasHeader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/levelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 0"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            />


        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCanvasHeader2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/restart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/restart"
            android:layout_centerInParent="true"
            android:contentDescription="Restart Button"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_centerInParent="true"
            android:contentDescription="Back Button"
            android:background="@android:color/transparent" />
        <ImageButton
            android:id="@+id/sound"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/soundon"
            android:layout_centerInParent="true"
            android:contentDescription="Sound On Button"
            android:background="@android:color/transparent" />
<!--        <ImageButton-->
<!--            android:id="@+id/soundOff"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:src="@drawable/soundoff"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:contentDescription="Sound Off Button"-->
<!--            android:background="@android:color/transparent" />-->

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Music"
            >
        </Button>

    </LinearLayout>

    <com.omer.yaellastfinal.MyCanvasView
        android:id="@+id/myCanvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>


